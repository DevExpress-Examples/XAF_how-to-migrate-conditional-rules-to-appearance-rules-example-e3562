<?xml version="1.0" ?>
<Application Title="RuleConversion2" Logo="ExpressAppLogo">
  <ConditionalEditorState>
    <Rules>
      <EditorStateRule Id="TestRule3" Criteria="DisableProperties = 'True'" EditorState="Disabled" Properties="*;DisableProperties" ViewType="Any" IsNewNode="True" ModelClass="RuleConversion2.Module.DemoTask" />
    </Rules>
  </ConditionalEditorState>
  <Views>
    <ListView Id="DemoTask_ListView">
      <ConditionalFormatting>
        <Rule ID="TestRule1" Criteria="IntegerProperty != 1" IsNewNode="True">
          <Target Name="Foreground" Color="Red" IsNewNode="True"/>
        </Rule>
      </ConditionalFormatting>
      <Columns>
        <ColumnInfo Id="IntegerProperty">
          <ConditionalFormatting>
            <Rule Id="TestRule2" Criteria="1==1" IsNewNode="True">
              <Target Name="Background" Color="255, 255, 0" IsNewNode="True" />
            </Rule>
          </ConditionalFormatting>
        </ColumnInfo>
      </Columns>
    </ListView>
  </Views>
</Application>